<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.dogparty.MainActivity"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">


    <ImageView
        android:layout_width= "match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/boneappetit"
        android:scaleType="centerCrop"
        android:paddingTop="64dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Throw your dog an unforpugable birthday party!
Visit Pup Party Park:
https://www.gaardn.space"
        android:textSize="16sp"
        android:textAlignment="center"
        android:background="#cfcfcf"
        android:padding="16dp"
        />


    <Button
        android:id="@+id/throw_ball_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="THROW BALL"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to play? Start here:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_above="@id/throw_ball_button"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
